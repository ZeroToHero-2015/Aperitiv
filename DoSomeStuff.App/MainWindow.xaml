<Window x:Class="DoSomeStuff.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoSomeStuff.App"
        mc:Ignorable="d"
        Title="Do Some Stuff" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBox Name="OutputTextBox" Grid.Row="0" AcceptsReturn="True" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="12" Click="DoStuff">Do stuff</Button>
            <Button Margin="12" Click="DoStuffAsync">Do stuff async</Button>
        </StackPanel>
    </Grid>
</Window>
